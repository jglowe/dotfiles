parse_git_branch() {
     git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/ [\1]/'
}

RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
NC=$(tput sgr0)
